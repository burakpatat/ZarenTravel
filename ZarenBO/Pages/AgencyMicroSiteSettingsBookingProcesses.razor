@page "/agency-micro-site-settings-booking-processes"
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@inject ContextMenuService ContextMenuService
@inject TooltipService TooltipService
@inject NotificationService NotificationService

@inject zaren_prodService zaren_prodService

<PageTitle>AgencyMicroSiteSettingsBookingProcesses</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="AgencyMicroSiteSettingsBookingProcesses" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenSplitButton Icon="get_app" style="margin-left: 10px; margin-bottom: 10px" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
        <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
        <RadzenSplitButtonItem Text="CSV" Value="csv" />
    </RadzenSplitButton>
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12">
        <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@agencyMicroSiteSettingsBookingProcesses"    TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" RowDoubleClick="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="PaymentOption" Title="Payment Option">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="AllowB2CUserInvoice" Title="Allow B2 C User Invoice">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="RequireAgencyBookingProcess" Title="Require Agency Booking Process">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="EnableCrossSellTicket" Title="Enable Cross Sell Ticket">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="EnableCrossSellRentalCars" Title="Enable Cross Sell Rental Cars">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="EnableCrossSellCrossSelling" Title="Enable Cross Sell Cross Selling">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="EnableCrossSellTransports" Title="Enable Cross Sell Transports">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="EnableCrossSellTransfers" Title="Enable Cross Sell Transfers">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="NotifyChangesRequotingSavedIdea" Title="Notify Changes Requoting Saved Idea">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="MaxTolerancePrice" Title="Max Tolerance Price">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="MaxToleranceAmountId" Title="Max Tolerance Amount Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="MaxToleranceCurrencyId" Title="Max Tolerance Currency Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="B2BUsersManuelServicesEnable" Title="B2 B Users Manuel Services Enable">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="ShowFareBreakdownOnTransports" Title="Show Fare Breakdown On Transports">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="SetFlightTaxesAsNonCommissionAble" Title="Set Flight Taxes As Non Commission Able">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="DefaultReplicatorbookingmodeForB2B" Title="Default Replicatorbookingmode For B2 B">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="DefaultReplicatorbookingmodeForB2C" Title="Default Replicatorbookingmode For B2 C">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="SelectAppearDigitalBrochuresForB2BUsers" Title="Select Appear Digital Brochures For B2 B Users">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="SelectAppearDigitalBrochuresForB2CUsers" Title="Select Appear Digital Brochures For B2 C Users">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="ForOnRequestContracts" Title="For On Request Contracts">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="Agency.InvoiceName" Title="Agency">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Property="AgencyMicroSite.Domain" Title="Agency Micro Site">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="agencyMicroSiteSettingsBookingProcess">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, agencyMicroSiteSettingsBookingProcess)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
@code {

    protected IEnumerable<ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess> agencyMicroSiteSettingsBookingProcesses;

    protected RadzenDataGrid<ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess> grid0;

    protected string search = "";

    protected async Task Search(ChangeEventArgs args)
    {
        search = $"{args.Value}";

        await grid0.GoToPage(0);

        agencyMicroSiteSettingsBookingProcesses = await zaren_prodService.GetAgencyMicroSiteSettingsBookingProcesses(new Query { Expand = "Agency,AgencyMicroSite" });
    }
    protected override async Task OnInitializedAsync()
    {
        agencyMicroSiteSettingsBookingProcesses = await zaren_prodService.GetAgencyMicroSiteSettingsBookingProcesses(new Query { Expand = "Agency,AgencyMicroSite" });
    }

    protected async Task AddButtonClick(MouseEventArgs args)
    {
        await DialogService.OpenAsync<AddAgencyMicroSiteSettingsBookingProcess>("Add AgencyMicroSiteSettingsBookingProcess", null);
        await grid0.Reload();
    }

    protected async Task EditRow(DataGridRowMouseEventArgs<ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess> args)
    {
        await DialogService.OpenAsync<EditAgencyMicroSiteSettingsBookingProcess>("Edit AgencyMicroSiteSettingsBookingProcess", new Dictionary<string, object> { {"Id", args.Data.Id} });
    }

    protected async Task GridDeleteButtonClick(MouseEventArgs args, ZarenTravelBO.Models.zaren_prod.AgencyMicroSiteSettingsBookingProcess agencyMicroSiteSettingsBookingProcess)
    {
        try
        {
            if (await DialogService.Confirm("Are you sure you want to delete this record?") == true)
            {
                var deleteResult = await zaren_prodService.DeleteAgencyMicroSiteSettingsBookingProcess(agencyMicroSiteSettingsBookingProcess.Id);

                if (deleteResult != null)
                {
                    await grid0.Reload();
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            { 
                Severity = NotificationSeverity.Error,
                Summary = $"Error", 
                Detail = $"Unable to delete AgencyMicroSiteSettingsBookingProcess" 
            });
        }
    }

    protected async Task ExportClick(RadzenSplitButtonItem args)
    {
        if (args?.Value == "csv")
        {
            await zaren_prodService.ExportAgencyMicroSiteSettingsBookingProcessesToCSV(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "Agency,AgencyMicroSite", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "AgencyMicroSiteSettingsBookingProcesses");
        }

        if (args == null || args.Value == "xlsx")
        {
            await zaren_prodService.ExportAgencyMicroSiteSettingsBookingProcessesToExcel(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "Agency,AgencyMicroSite", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "AgencyMicroSiteSettingsBookingProcesses");
        }
    }
}
