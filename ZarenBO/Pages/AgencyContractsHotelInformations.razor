                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="LangId" Title="Lang Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="HotelCategoryId" Title="Hotel Category Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="HotelImageId" Title="Hotel Image Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="HotelFacilityId" Title="Hotel Facility Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="IsActive" Title="Is Active">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="OnlyHolidayPackage" Title="Only Holiday Package">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="CreatedByUser" Title="Created By User">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="SupplierBy" Title="Supplier By">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="HotelCode" Title="Hotel Code">
