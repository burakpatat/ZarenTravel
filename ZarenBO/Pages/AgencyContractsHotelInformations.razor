                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="Description" Title="Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="Remark" Title="Remark">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="agencyContractsHotelInformation">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, agencyContractsHotelInformation)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
@code {

    protected IEnumerable<ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation> agencyContractsHotelInformations;

    protected RadzenDataGrid<ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation> grid0;

    protected string search = "";

    protected async Task Search(ChangeEventArgs args)
    {
        search = $"{args.Value}";

        await grid0.GoToPage(0);

        agencyContractsHotelInformations = await zaren_prodService.GetAgencyContractsHotelInformations(new Query { Filter = $@"i => i.HotelCode.Contains(@0) || i.Name.Contains(@0) || i.Address.Contains(@0) || i.LocationName.Contains(@0) || i.PostalCode.Contains(@0) || i.Phone.Contains(@0) || i.Fax.Contains(@0) || i.Email.Contains(@0) || i.PossibleDestinations.Contains(@0) || i.Description.Contains(@0) || i.Remark.Contains(@0)", FilterParameters = new object[] { search } });
    }
    protected override async Task OnInitializedAsync()
    {
        agencyContractsHotelInformations = await zaren_prodService.GetAgencyContractsHotelInformations(new Query { Filter = $@"i => i.HotelCode.Contains(@0) || i.Name.Contains(@0) || i.Address.Contains(@0) || i.LocationName.Contains(@0) || i.PostalCode.Contains(@0) || i.Phone.Contains(@0) || i.Fax.Contains(@0) || i.Email.Contains(@0) || i.PossibleDestinations.Contains(@0) || i.Description.Contains(@0) || i.Remark.Contains(@0)", FilterParameters = new object[] { search } });
    }

    protected async Task AddButtonClick(MouseEventArgs args)
    {
        await DialogService.OpenAsync<AddAgencyContractsHotelInformation>("Add AgencyContractsHotelInformation", null);
        await grid0.Reload();
    }

    protected async Task EditRow(DataGridRowMouseEventArgs<ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation> args)
    {
        await DialogService.OpenAsync<EditAgencyContractsHotelInformation>("Edit AgencyContractsHotelInformation", new Dictionary<string, object> { {"Id", args.Data.Id} });
    }

    protected async Task GridDeleteButtonClick(MouseEventArgs args, ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation agencyContractsHotelInformation)
    {
        try
        {
            if (await DialogService.Confirm("Are you sure you want to delete this record?") == true)
            {
                var deleteResult = await zaren_prodService.DeleteAgencyContractsHotelInformation(agencyContractsHotelInformation.Id);

                if (deleteResult != null)
                {
                    await grid0.Reload();
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            { 
                Severity = NotificationSeverity.Error,
                Summary = $"Error", 
                Detail = $"Unable to delete AgencyContractsHotelInformation" 
            });
        }
    }

    protected async Task ExportClick(RadzenSplitButtonItem args)
    {
        if (args?.Value == "csv")
        {
            await zaren_prodService.ExportAgencyContractsHotelInformationsToCSV(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "AgencyContractsHotelInformations");
        }

        if (args == null || args.Value == "xlsx")
        {
            await zaren_prodService.ExportAgencyContractsHotelInformationsToExcel(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "AgencyContractsHotelInformations");
        }
    }
}
