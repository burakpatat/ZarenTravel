@code {

    protected override async Task OnInitializedAsync()
    {
    }
    protected bool errorVisible;
    protected ZarenUI.Server.Models.JSONServer.AuditProjectTable auditProjectTable;

    protected async Task FormSubmit()
    {
        try
        {
            await JSONServerService.CreateAuditProjectTable(auditProjectTable);
            DialogService.Close(auditProjectTable);
        }
        catch (Exception ex)
        {
            errorVisible = true;
        }
    }

    protected async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }
}
