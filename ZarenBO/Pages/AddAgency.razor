                </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                    <RadzenLabel Text="Deferred Payment Days" Component="DeferredPaymentDays" style="width: 100%" />
                </div>
                <div class="col-md-9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@agency.DeferredPaymentDays" Name="DeferredPaymentDays" />
                </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                    <RadzenLabel Text="Deferred Payment Limit" Component="DeferredPaymentLimit" style="width: 100%" />
                </div>
                <div class="col-md-9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@agency.DeferredPaymentLimit" Name="DeferredPaymentLimit" />
                </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                    <RadzenLabel Text="Deferred Payment Limit Currency" Component="DeferredPaymentLimitCurrency" style="width: 100%" />
                </div>
                <div class="col-md-9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@agency.DeferredPaymentLimitCurrency" Name="DeferredPaymentLimitCurrency" />
                </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                    <RadzenLabel Text="Minimum First Payment Amount" Component="MinimumFirstPaymentAmount" style="width: 100%" />
                </div>
                <div class="col-md-9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@agency.MinimumFirstPaymentAmount" Name="MinimumFirstPaymentAmount" />
                </div>
