@code {

    protected IEnumerable<ZarenTravelBO.Models.zaren_prod.Country1> country1S;

    protected RadzenDataGrid<ZarenTravelBO.Models.zaren_prod.Country1> grid0;

    protected string search = "";

    protected async Task Search(ChangeEventArgs args)
    {
        search = $"{args.Value}";

        await grid0.GoToPage(0);

        country1S = await zaren_prodService.GetCountry1S(new Query { Filter = $@"i => i.Name.Contains(@0) || i.ShortName.Contains(@0) || i.Temperature.Contains(@0) || i.Area.Contains(@0) || i.Religion.Contains(@0) || i.Location.Contains(@0) || i.Density.Contains(@0) || i.Symbol.Contains(@0) || i.Abbreviation.Contains(@0) || i.FlagBase64.Contains(@0) || i.Expectancy.Contains(@0) || i.Dish.Contains(@0) || i.LanguagesJSON.Contains(@0) || i.Landlocked.Contains(@0) || i.Iso.Contains(@0) || i.Independence.Contains(@0) || i.Government.Contains(@0) || i.North.Contains(@0) || i.South.Contains(@0) || i.West.Contains(@0) || i.East.Contains(@0) || i.Elevation.Contains(@0) || i.DomainTld.Contains(@0) || i.CurrencyName.Contains(@0) || i.CurrencyCode.Contains(@0) || i.CostLine.Contains(@0) || i.Continent.Contains(@0) || i.City.Contains(@0) || i.CallingCode.Contains(@0) || i.Barcode.Contains(@0) || i.Height.Contains(@0) || i.Logo.Contains(@0)", FilterParameters = new object[] { search } });
    }
    protected override async Task OnInitializedAsync()
    {
        country1S = await zaren_prodService.GetCountry1S(new Query { Filter = $@"i => i.Name.Contains(@0) || i.ShortName.Contains(@0) || i.Temperature.Contains(@0) || i.Area.Contains(@0) || i.Religion.Contains(@0) || i.Location.Contains(@0) || i.Density.Contains(@0) || i.Symbol.Contains(@0) || i.Abbreviation.Contains(@0) || i.FlagBase64.Contains(@0) || i.Expectancy.Contains(@0) || i.Dish.Contains(@0) || i.LanguagesJSON.Contains(@0) || i.Landlocked.Contains(@0) || i.Iso.Contains(@0) || i.Independence.Contains(@0) || i.Government.Contains(@0) || i.North.Contains(@0) || i.South.Contains(@0) || i.West.Contains(@0) || i.East.Contains(@0) || i.Elevation.Contains(@0) || i.DomainTld.Contains(@0) || i.CurrencyName.Contains(@0) || i.CurrencyCode.Contains(@0) || i.CostLine.Contains(@0) || i.Continent.Contains(@0) || i.City.Contains(@0) || i.CallingCode.Contains(@0) || i.Barcode.Contains(@0) || i.Height.Contains(@0) || i.Logo.Contains(@0)", FilterParameters = new object[] { search } });
    }

    protected async Task AddButtonClick(MouseEventArgs args)
    {
        await DialogService.OpenAsync<AddCountry1>("Add Country1", null);
        await grid0.Reload();
    }

    protected async Task EditRow(DataGridRowMouseEventArgs<ZarenTravelBO.Models.zaren_prod.Country1> args)
    {
        await DialogService.OpenAsync<EditCountry1>("Edit Country1", new Dictionary<string, object> { {"Id", args.Data.Id} });
    }

    protected async Task GridDeleteButtonClick(MouseEventArgs args, ZarenTravelBO.Models.zaren_prod.Country1 country1)
    {
        try
        {
            if (await DialogService.Confirm("Are you sure you want to delete this record?") == true)
            {
                var deleteResult = await zaren_prodService.DeleteCountry1(country1.Id);

                if (deleteResult != null)
                {
                    await grid0.Reload();
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            { 
                Severity = NotificationSeverity.Error,
                Summary = $"Error", 
                Detail = $"Unable to delete Country1" 
            });
        }
    }

    protected async Task ExportClick(RadzenSplitButtonItem args)
    {
        if (args?.Value == "csv")
        {
            await zaren_prodService.ExportCountry1SToCSV(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "Country1S");
        }

        if (args == null || args.Value == "xlsx")
        {
            await zaren_prodService.ExportCountry1SToExcel(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "Country1S");
        }
    }
