                <RadzenDataGridColumn TItem="Travel.Models.TravelCDb.AgencyUser" Property="CreatedDate" Title="Created Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Travel.Models.TravelCDb.AgencyUser" Property="UpdatedDate" Title="Updated Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Travel.Models.TravelCDb.AgencyUser" Property="CreatedBy" Title="Created By">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Travel.Models.TravelCDb.AgencyUser" Property="UpdatedBy" Title="Updated By">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Travel.Models.TravelCDb.AgencyUser" Property="Password" Title="Password">
