@code {

    protected IEnumerable<ZarenTravel.Models.ZarenSoft.DatatableCmsInputType> datatableCmsInputTypes;

    protected RadzenDataGrid<ZarenTravel.Models.ZarenSoft.DatatableCmsInputType> grid0;

    protected string search = "";

    protected async Task Search(ChangeEventArgs args)
    {
        search = $"{args.Value}";

        await grid0.GoToPage(0);

        datatableCmsInputTypes = await ZarenSoftService.GetDatatableCmsInputTypes(new Query { Filter = $@"i => i.Name.Contains(@0)", FilterParameters = new object[] { search } });
    }
    protected override async Task OnInitializedAsync()
    {
        datatableCmsInputTypes = await ZarenSoftService.GetDatatableCmsInputTypes(new Query { Filter = $@"i => i.Name.Contains(@0)", FilterParameters = new object[] { search } });
    }

    protected async Task AddButtonClick(MouseEventArgs args)
    {
        await DialogService.OpenAsync<AddDatatableCmsInputType>("Add DatatableCmsInputType", null);
        await grid0.Reload();
    }

    protected async Task EditRow(DataGridRowMouseEventArgs<ZarenTravel.Models.ZarenSoft.DatatableCmsInputType> args)
    {
        await DialogService.OpenAsync<EditDatatableCmsInputType>("Edit DatatableCmsInputType", new Dictionary<string, object> { {"ID", args.Data.ID} });
    }

    protected async Task GridDeleteButtonClick(MouseEventArgs args, ZarenTravel.Models.ZarenSoft.DatatableCmsInputType datatableCmsInputType)
    {
        try
        {
            if (await DialogService.Confirm("Are you sure you want to delete this record?") == true)
            {
                var deleteResult = await ZarenSoftService.DeleteDatatableCmsInputType(datatableCmsInputType.ID);

                if (deleteResult != null)
                {
                    await grid0.Reload();
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            { 
                Severity = NotificationSeverity.Error,
                Summary = $"Error", 
                Detail = $"Unable to delete DatatableCmsInputType" 
            });
        }
    }

    protected async Task ExportClick(RadzenSplitButtonItem args)
    {
        if (args?.Value == "csv")
        {
            await ZarenSoftService.ExportDatatableCmsInputTypesToCSV(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "DatatableCmsInputTypes");
        }

        if (args == null || args.Value == "xlsx")
        {
            await ZarenSoftService.ExportDatatableCmsInputTypesToExcel(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "DatatableCmsInputTypes");
        }
    }

    protected ZarenTravel.Models.ZarenSoft.DatatableCmsInputType datatableCmsInputType;
    protected async Task GetChildData(ZarenTravel.Models.ZarenSoft.DatatableCmsInputType args)
    {
        datatableCmsInputType = args;
        var DatabaseColumnResult = await ZarenSoftService.GetDatabaseColumns();
        if (DatabaseColumnResult != null)
        {
            args.DatabaseColumns = DatabaseColumnResult.ToList();
        }
    }

    protected RadzenDataGrid<ZarenTravel.Models.ZarenSoft.DatabaseColumn> DatabaseColumnDataGrid;

    protected async Task DatabaseColumnAddButtonClick(MouseEventArgs args, ZarenTravel.Models.ZarenSoft.DatatableCmsInputType data)
    {
        var dialogResult = await DialogService.OpenAsync<AddDatabaseColumn>("Add DatabaseColumn", new Dictionary<string, object> {  });
        await GetChildData(data);
        await DatabaseColumnDataGrid.Reload();
    }

    protected async Task DatabaseColumnRowSelect(ZarenTravel.Models.ZarenSoft.DatabaseColumn args, ZarenTravel.Models.ZarenSoft.DatatableCmsInputType data)
    {
        var dialogResult = await DialogService.OpenAsync<EditDatabaseColumn>("Edit DatabaseColumn", new Dictionary<string, object> { {"ID", args.ID} });
        await GetChildData(data);
        await DatabaseColumnDataGrid.Reload();
    }

    protected async Task DatabaseColumnDeleteButtonClick(MouseEventArgs args, ZarenTravel.Models.ZarenSoft.DatabaseColumn databaseColumn)
    {
        try
        {
            if (await DialogService.Confirm("Are you sure you want to delete this record?") == true)
            {
                var deleteResult = await ZarenSoftService.DeleteDatabaseColumn(databaseColumn.ID);

                if (deleteResult != null)
                {
                    await DatabaseColumnDataGrid.Reload();
                }
            }
        }
        catch (System.Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            { 
                Severity = NotificationSeverity.Error,
                Summary = $"Error", 
                Detail = $"Unable to delete DatabaseColumn" 
            });
        }
    }

    string lastFilter;
    protected async void Grid0Render(DataGridRenderEventArgs<ZarenTravel.Models.ZarenSoft.DatatableCmsInputType> args)
    {
        if (grid0.Query.Filter != lastFilter) {
            datatableCmsInputType = grid0.View.FirstOrDefault();
        }

        if (grid0.Query.Filter != lastFilter)
        {
            await grid0.SelectRow(datatableCmsInputType);
        }

        lastFilter = grid0.Query.Filter;
    }
}
