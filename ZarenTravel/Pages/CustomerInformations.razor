@page "/customer-informations"
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@inject ContextMenuService ContextMenuService
@inject TooltipService TooltipService
@inject NotificationService NotificationService

@inject ZarenSoftService ZarenSoftService

<PageTitle>CustomerInformations</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="CustomerInformations" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenSplitButton Icon="get_app" style="margin-left: 10px; margin-bottom: 10px" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
        <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
        <RadzenSplitButtonItem Text="CSV" Value="csv" />
    </RadzenSplitButton>
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12">
        <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@customerInformations"    TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" RowDoubleClick="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="CustomerId" Title="CustomerId">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="EmailId" Title="EmailId">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="Title" Title="Title">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="FirstName" Title="FirstName">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="LastName" Title="LastName">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="Gender" Title="Gender">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="AlternativeEmailId" Title="AlternativeEmailId">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="Telephone" Title="Telephone">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="Mobile" Title="Mobile">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="CountryCode" Title="CountryCode">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="LanguageCode" Title="LanguageCode">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="OfficeTelephone" Title="OfficeTelephone">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="DateOfBirth" Title="DateOfBirth">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="Fax" Title="Fax">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="NationalityCode" Title="NationalityCode">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="AgentCode" Title="AgentCode">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="CustomerId_N" Title="CustomerId_N">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="Totalpaxcount" Title="Totalpaxcount">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="TotalInfantcount" Title="TotalInfantcount">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="TotalFare" Title="TotalFare">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="TotalTaxChg" Title="TotalTaxChg">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="BookingStatus" Title="BookingStatus">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="ModificationDate" Title="ModificationDate">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="FILE_ID" Title="FILE_ID">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="FILE_NAME" Title="FILE_NAME">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Property="RecordDateStamp" Title="RecordDateStamp">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravel.Models.ZarenSoft.CustomerInformation" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="customerInformation">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, customerInformation)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
@code {

    protected IEnumerable<ZarenTravel.Models.ZarenSoft.CustomerInformation> customerInformations;

    protected RadzenDataGrid<ZarenTravel.Models.ZarenSoft.CustomerInformation> grid0;

    protected string search = "";

    protected async Task Search(ChangeEventArgs args)
    {
        search = $"{args.Value}";

        await grid0.GoToPage(0);

        customerInformations = await ZarenSoftService.GetCustomerInformations(new Query { Filter = $@"i => i.EmailId.Contains(@0) || i.Title.Contains(@0) || i.FirstName.Contains(@0) || i.LastName.Contains(@0) || i.Gender.Contains(@0) || i.AlternativeEmailId.Contains(@0) || i.Telephone.Contains(@0) || i.Mobile.Contains(@0) || i.CountryCode.Contains(@0) || i.LanguageCode.Contains(@0) || i.OfficeTelephone.Contains(@0) || i.Fax.Contains(@0) || i.AgentCode.Contains(@0) || i.FILE_NAME.Contains(@0)", FilterParameters = new object[] { search } });
    }
    protected override async Task OnInitializedAsync()
    {
        customerInformations = await ZarenSoftService.GetCustomerInformations(new Query { Filter = $@"i => i.EmailId.Contains(@0) || i.Title.Contains(@0) || i.FirstName.Contains(@0) || i.LastName.Contains(@0) || i.Gender.Contains(@0) || i.AlternativeEmailId.Contains(@0) || i.Telephone.Contains(@0) || i.Mobile.Contains(@0) || i.CountryCode.Contains(@0) || i.LanguageCode.Contains(@0) || i.OfficeTelephone.Contains(@0) || i.Fax.Contains(@0) || i.AgentCode.Contains(@0) || i.FILE_NAME.Contains(@0)", FilterParameters = new object[] { search } });
    }

    protected async Task AddButtonClick(MouseEventArgs args)
    {
        await DialogService.OpenAsync<AddCustomerInformation>("Add CustomerInformation", null);
        await grid0.Reload();
    }

    protected async Task EditRow(DataGridRowMouseEventArgs<ZarenTravel.Models.ZarenSoft.CustomerInformation> args)
    {
        await DialogService.OpenAsync<EditCustomerInformation>("Edit CustomerInformation", new Dictionary<string, object> { {"Id", args.Data.Id}, {"CustomerId", args.Data.CustomerId} });
    }

    protected async Task GridDeleteButtonClick(MouseEventArgs args, ZarenTravel.Models.ZarenSoft.CustomerInformation customerInformation)
    {
        try
        {
            if (await DialogService.Confirm("Are you sure you want to delete this record?") == true)
            {
                var deleteResult = await ZarenSoftService.DeleteCustomerInformation(customerInformation.Id, customerInformation.CustomerId);

                if (deleteResult != null)
                {
                    await grid0.Reload();
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            { 
                Severity = NotificationSeverity.Error,
                Summary = $"Error", 
                Detail = $"Unable to delete CustomerInformation" 
            });
        }
    }

    protected async Task ExportClick(RadzenSplitButtonItem args)
    {
        if (args?.Value == "csv")
        {
            await ZarenSoftService.ExportCustomerInformationsToCSV(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "CustomerInformations");
        }

        if (args == null || args.Value == "xlsx")
        {
            await ZarenSoftService.ExportCustomerInformationsToExcel(new Query
{ 
    Filter = $@"{(string.IsNullOrEmpty(grid0.Query.Filter)? "true" : grid0.Query.Filter)}", 
    OrderBy = $"{grid0.Query.OrderBy}", 
    Expand = "", 
    Select = string.Join(",", grid0.ColumnsCollection.Where(c => c.GetVisible()).Select(c => c.Property))
}, "CustomerInformations");
        }
    }
}
