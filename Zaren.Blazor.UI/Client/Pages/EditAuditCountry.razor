@code {

    [Parameter]
    public long LogID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        auditCountry = await JSONServerService.GetAuditCountryByLogId(logId:LogID);
    }
    protected bool errorVisible;
    protected ZarenUI.Server.Models.JSONServer.AuditCountry auditCountry;

    protected async Task FormSubmit()
    {
        try
        {
            await JSONServerService.UpdateAuditCountry(logId:LogID, auditCountry);
            DialogService.Close(auditCountry);
        }
        catch (Exception ex)
        {
            errorVisible = true;
        }
    }

    protected async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }
