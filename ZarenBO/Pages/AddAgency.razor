            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                    <RadzenLabel Text="Has Credit Or Deposit Payment Allowed" Component="HasCreditOrDepositPaymentAllowed" style="width: 100%" />
                </div>
                <div class="col-md-9">
                    <RadzenCheckBox @bind-Value="@agency.HasCreditOrDepositPaymentAllowed" Name="HasCreditOrDepositPaymentAllowed" />
                </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                    <RadzenLabel Text="Agency Manager" Component="AgencyManager" style="width: 100%" />
                </div>
                <div class="col-md-9">
                    <RadzenDropDownDataGrid Data="@agencyManagersForAgencyManagerId" TextProperty="" ValueProperty="Id"
                         Placeholder="Choose AgencyManager" style="display: block; width: 100%" @bind-Value="@agency.AgencyManagerId" Name="AgencyManagerId"
                           />
                </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                    <RadzenLabel Text="Country1" Component="Country1" style="width: 100%" />
                </div>
                <div class="col-md-9">
                    <RadzenDropDownDataGrid Data="@country1SForCountry" TextProperty="Name" ValueProperty="Id"
                         Placeholder="Choose Country1" style="display: block; width: 100%" @bind-Value="@agency.Country" Name="Country"
                           />
                </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
                <div class="col-md-3">
                    <RadzenLabel Text="Invoice Type" Component="InvoiceType" style="width: 100%" />
                </div>
                <div class="col-md-9">
                    <RadzenDropDownDataGrid Data="@invoiceTypesForInvoiceTypeId" TextProperty="Name" ValueProperty="Id"
                         Placeholder="Choose InvoiceType" style="display: block; width: 100%" @bind-Value="@agency.InvoiceTypeId" Name="InvoiceTypeId"
                           />
                </div>
            </div>
            <div class="row">
                <div class="col d-flex justify-content-end" style="margin-top: 1rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Style="margin-right: 0.5rem" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
                </div>
            </div>
        </RadzenTemplateForm>
    </div>

@code {

    protected override async Task OnInitializedAsync()
    {
        agency = new ZarenTravelBO.Models.zaren_prod.Agency();

        agencyManagersForAgencyManagerId = await zaren_prodService.GetAgencyManagers();

        country1SForCountry = await zaren_prodService.GetCountry1S();

        invoiceTypesForInvoiceTypeId = await zaren_prodService.GetInvoiceTypes();
    }
    protected bool errorVisible;
    protected ZarenTravelBO.Models.zaren_prod.Agency agency;

    protected IEnumerable<ZarenTravelBO.Models.zaren_prod.AgencyManager> agencyManagersForAgencyManagerId;

    protected IEnumerable<ZarenTravelBO.Models.zaren_prod.Country1> country1SForCountry;

    protected IEnumerable<ZarenTravelBO.Models.zaren_prod.InvoiceType> invoiceTypesForInvoiceTypeId;

    protected async Task FormSubmit()
    {
        try
        {
            await zaren_prodService.CreateAgency(agency);
            DialogService.Close(agency);
        }
        catch (Exception ex)
        {
            errorVisible = true;
        }
    }

    protected async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }
}
