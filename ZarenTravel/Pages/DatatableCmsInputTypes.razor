                    <RadzenDataGrid ColumnWidth="200px" Visible="@(datatableCmsInputType != null)" @ref=DatabaseColumnDataGrid AllowFiltering="true" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="true" AllowSorting="true" 
                      Data="@datatableCmsInputType?.DatabaseColumns" TItem="ZarenTravel.Models.ZarenSoft.DatabaseColumn"  RowSelect="@(args => DatabaseColumnRowSelect(args, datatableCmsInputType))">
                      <Columns>
