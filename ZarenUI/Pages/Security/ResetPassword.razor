@code {
    protected ApplicationUser user;
    protected bool isBusy;
    protected bool errorVisible;
    protected string error;
    protected string info;
    protected bool infoVisible;
    protected string resulterror;
    protected string resultinfo;
    [ParameterAttribute]
    public string userid { get; set; }
    [Parameter]
    public string code { get; set; }

    [Inject]
    protected SecurityService Security { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var query = System.Web.HttpUtility.ParseQueryString(new Uri(NavigationManager.ToAbsoluteUri(NavigationManager.Uri).ToString()).Query);
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("code", out var _code))
            code = _code;
        if (userid != "" && userid != null)
        {
            await base.OnInitializedAsync();
        }
        else
        {
            NavigationManager.NavigateTo("/", true);
        }
        error = query.Get("error");
        info = query.Get("info");
        errorVisible = !string.IsNullOrEmpty(error);
        infoVisible = !string.IsNullOrEmpty(info);
        if (errorVisible == false)
        {
            resulterror = "hidden;position:absolute;";
        }
        else
        {
            resulterror = "visible;";
        }
        if (infoVisible == false)
        {
            resultinfo = "hidden;position:absolute;";
        }
        else
        {
            resultinfo = "visible;";
        }       
    }
}
