@page "/resetpassword/{userid}"
@using Microsoft.AspNetCore.WebUtilities;
@using ZarenUI.Models;
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@inject ContextMenuService ContextMenuService
@inject TooltipService TooltipService
@inject NotificationService NotificationService

<PageTitle>Reset password</PageTitle>
<main>
    <section class="vh-xxl-100">
        <div class="container h-100 d-flex px-0 px-sm-4">
            <div class="row justify-content-center align-items-center m-auto">
                <div class="col-12">
                    <div class="bg-mode shadow rounded-3 overflow-hidden">
                        <div class="row g-0">
                            <!-- Vector Image -->
                            <div class="col-lg-6 d-flex align-items-center order-2 order-lg-1">
                                <div class="p-3 p-lg-5">
                                    <img src="assets/images/element/signin.svg" alt="">
                                </div>
                                <!-- Divider -->
                                <div class="vr opacity-1 d-none d-lg-block"></div>
                            </div>
                            <!-- Information -->
                            <div class="col-lg-6 order-1">
                                <div class="p-4 p-sm-7">
                                    <!-- Logo -->
                                    <a href="/">
                                        <img class="h-50px mb-4" src="/images/brand-primary-logo.png" alt="logo">
                                    </a>
                                    <h1 class="mb-2 h3" data-i18="reset.password.message"></h1>
                                    <!-- Title -->

                                    <form class="mt-4 text-start" action="@($"account/confirmpasswordreset")" method="post">
                                        <input type="hidden" name="userId" value="@userid" />
                                        <div class="alert alert-danger" style="visibility:@resulterror;">@error</div>
                                        <div class="alert alert-success" style="visibility:@resultinfo;">@info</div>
                                        <!-- Password -->
                                        <div class="mb-3 position-relative">
                                            <label class="form-label" data-i18="reset.password.label"></label>
                                            <input name="password" class="form-control fakepassword" type="password" id="psw-input" required>
                                            <span class="position-absolute top-50 end-0 translate-middle-y p-0 mt-3">
                                                <i class="fakepasswordicon fas fa-eye-slash cursor-pointer p-2"></i>
                                            </span>
                                        </div>
                                        <!-- Password Confirm -->
                                        <div class="mb-3 position-relative">
                                            <label class="form-label" data-i18="reset.confirmpassword.label"></label>
                                            <input name="passwordconfirm" class="form-control fakepassword" type="password" id="psw-input" required>
                                            <span class="position-absolute top-50 end-0 translate-middle-y p-0 mt-3">
                                                <i class="fakepasswordicon fas fa-eye-slash cursor-pointer p-2"></i>
                                            </span>
                                        </div>
                                        <!-- Button -->
                                        <div><button type="submit" class="btn btn-primary w-100 mb-0" data-i18="reset.password.btn.save"></button></div>
                                    </form>
                                    <div>
                                        <br />
                                        <a href="/" class="btn btn-light w-100 mb-0">
                                            <span data-i18="register.Cancel"></span>
                                        </a>
                                    </div>
                                    <!-- Copyright -->
                                    <div class="text-primary-hover mt-3 text-center"> Copyrights ©@DateTime.Now.Year Zaren Travel </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
