                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="PostalCode" Title="Postal Code">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ZarenTravelBO.Models.zaren_prod.AgencyContractsHotelInformation" Property="CountryId" Title="Country Id">
                </RadzenDataGridColumn>
